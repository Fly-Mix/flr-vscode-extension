{
  "name": "flr",
  "displayName": "FLR",
  "description": "Flutter Resources Manager",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:pubspec.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flr.init",
        "title": "Create Flrfile.yaml",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "flr.openFile",
        "title": "Open File"
      },
      {
        "command": "flr.stopMonitor",
        "title": "Stop Monitor"
      },
      {
        "command": "flr.startMonitor",
        "title": "Start Monitor"
      },
      {
        "command": "flr.refresh",
        "title": "Refresh File"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "flr.init",
          "when": "view == flr",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "flr.stopMonitor",
          "when": "view == flr && viewItem == file && isMonitorEnabled",
          "group": "inline"
        },
        {
          "command": "flr.startMonitor",
          "when": "view == flr && viewItem == file && !isMonitorEnabled",
          "group": "inline"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "flr",
          "name": "Flr(Assets Manager)",
          "when": "isPubspecYamlExist"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.41.0",
    "@types/mkdirp": "^0.5.2",
    "@types/rimraf": "^2.0.2",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "typescript": "^3.6.4",
    "tslint": "^5.20.0",
    "vscode-test": "^1.2.2"
  },
  "dependencies": {
    "@types/js-yaml": "^3.12.1"
  }
}
